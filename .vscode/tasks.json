{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flutter: Test with Coverage",
            "type": "shell",
            "command": "flutter",
            "args": [
                "test",
                "--coverage"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run Flutter tests and generate coverage report"
        },
        {
            "label": "Flutter: Test Unit Only",
            "type": "shell",
            "command": "flutter",
            "args": [
                "test",
                "test/unit/"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Flutter: Test Widget Only",
            "type": "shell",
            "command": "flutter",
            "args": [
                "test",
                "test/widget/",
                "test/widget_test.dart"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Coverage: Display in VS Code",
            "type": "shell",
            "command": "echo",
            "args": [
                "Coverage report ready! Use Ctrl+Shift+P -> 'Coverage Gutters: Display Coverage'"
            ],
            "group": "test",
            "dependsOn": "Flutter: Test with Coverage",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
